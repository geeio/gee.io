.contact(ng-controller="ContactCtrl")
  div(ng-switch='state')
    div(ng-switch-when='complete')
    div(ng-switch-default)
      form(name='hf', ng-submit='submit_hire()', novalidate)
        +input({name: 'name', icon: 'ion-person'})(type='text', placeholder='What is your name?')
        +input({name: 'email', icon: 'ion-email'})(type='email', placeholder='What is your email address?')
        +input({name: 'phone', icon: 'ion-ios7-telephone'})(type='tel', placeholder='What is your phone number?')
        +input({name: 'what', icon: 'ion-help'})(type='textarea', placeholder='What do you want to hire me for?')
        +input({name: 'budget', icon: 'ion-pricetag'})(type='text', placeholder='What is your budget?')
        button
          i.ion-loading-d
          | Submit
