mixin input(opts)
  - var type = attributes.type
  .input(field=opts.name)
    - if (opts.icon)
      i(class='#{opts.icon}')

    - if (attributes.type == 'textarea')
      textarea(required, placeholder=attributes.placeholder, name='#{opts.name}')
    - else
      input(type=type, required, placeholder=attributes.placeholder, name='#{opts.name}')

