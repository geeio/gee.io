mixin input(opts)
  - var type = attributes.type
  .input(ng-class='{ error: hf.#{opts.name}.$invalid && (hf.#{opts.name}.$dirty || hf.submitted) }', field=opts.name)
    - if (opts.icon)
      i(class='#{opts.icon}')

    - if (attributes.type == 'textarea')
      textarea(required, placeholder=attributes.placeholder, ng-model='data.#{opts.name}', name='#{opts.name}')
    - else
      input(type=type, required, placeholder=attributes.placeholder, ng-model='data.#{opts.name}', name='#{opts.name}')

    .error-block
      .arrow
      i.ion-ios7-information
      span(ng-show='hf.#{opts.name}.$error.required') Please fill out this field.
      span(ng-show='hf.#{opts.name}.$error.email') A valid email is required.

